{
  "manifest_version": 3,

  "name": "Lasso",
  "description": "Track your path",
  "version": "0.1",

  "action": {
    "default_icon": {"16": "icon.png"},
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["activeTab", "tabs", "bookmarks", "history", "storage", "<all_urls>"],

  "host_permissions": [
    "<all_urls>"
  ]
}
